{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "checkJs": false,
        "noEmit": false,
        "outDir": "./build",
        "sourceMap": true,
        "sourceRoot": "./src",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "lib": ["es2018", "DOM"],
        "jsx": "react",
        "types": ["@iobroker/types"],
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "exclude": ["**/node_modules", "**/build", "adminWww/**"],
    "include": ["**/*.js", "**/*.ts", "**/*.d.ts",
        "eslint.config.mjs"
    ],
}
