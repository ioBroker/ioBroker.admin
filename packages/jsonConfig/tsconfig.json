{
    "extends": "../admin/src-admin/tsconfig.json",
    "include": ["./src"],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": false,
        "declaration": true,
        "outDir": "./build",
        "baseUrl": "./",
        "sourceMap": true,
        "sourceRoot": "./src",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "lib": ["es2018", "DOM"],
        "jsx": "react",
        "types": ["@iobroker/types"],
        "paths": {
            "#JC/*": ["./src/*"]
        }
    }
}
